<div class="container">
  <div class="row">
    <div class="col-12 my-5">
      <div class="text-center" style="font-size: 100%;">

        <h1>My page</h1>

        <div><%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpg', fallback: "0.jpeg", class: "user-image" %></div>
        <div><%= @user.name %></div>
        <div><%= @user.introduction %></div>

        <div class="following">
          <%= link_to user_relationships_path(@user.id), class: 'link' do %>
          <p>フォロー数：<%= @user.followings.count %></p>
          <% end %>
        </div>

        <div class="follower">
          <%= link_to user_relationships_path(@user.id), class: 'link' do %>
          <p>フォロワー数：<%= @user.followers.count %></p>
          <% end %>
        </div>

        <% if current_user != @user %>
            <% if @user.followed_by?(current_user) %>
              <div><%= link_to "フォロー外す", user_relationships_path(@user.id), method: :delete, class: "btn btn-primary" %></div>
            <% else %>
              <div><%= link_to "フォローする", user_relationships_path(@user.id), method: :post, class: "btn btn-success" %></div>
            <% end %>
          <% end %>

        <div><%= link_to "Config", edit_user_path(current_user) %></div>






        <h1>Contents</h1>
        <% @user.contents.each do |content| %>

          <%= link_to content_path(content.id), class: 'link' do %>
            <div><%= attachment_image_tag content, :content_image, :fill, 350, 300, format: 'jpg' %></div>
          <% end %>

          <div class="comment-count">
            コメント件数：<%= link_to content.comments.count, content_comments_path(content) %>
          </div>
          
          <div class="favorite_buttons_<%= content.id %>">
            <%= render 'favorites/favorite',content: content %>
          </div>

          <%= link_to user_path(content.user.id), class: 'link' do %>
            <div><%= attachment_image_tag content.user, :profile_image, :fill, 100, 100, format: 'jpg', fallback: "0.jpeg", class: "user-image" %></div>
            <div><%= content.user.name %></div>
          <% end %>

          <div><%= content.description %></div>

        <% end %>


      </div>
    </div>
  </div>
</div>