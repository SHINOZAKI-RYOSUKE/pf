<div class="container-fluid">
  <div class="row">

    <div class="col-2 text-center">
      
      <div class="side_left">
        <%= link_to new_content_path do %>
        <i class="far fa-plus-square fa-3x"></i>
        <% end %>
      </div>
    </div>


    <div class="col-8">
      <div class="text-center">

        <h1>Users</h1>

        <% @users.each do |user| %>

          <%= link_to user_path(user.id), class: 'link' do %>
          <div class="user_x">
            <div><%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpg', fallback: "0.jpeg", class: "user-image" %></div>
            <div><%= user.name %></div>
          </div>
          <% end %>

          <div><%= user.greeting %></div>

          <% if current_user != user %>
            <% if user.followed_by?(current_user) %>
              <div><%= link_to "フォロー解除", user_relationships_path(user.id), method: :delete, class: "btn btn-secondary" %></div>
            <% else %>
              <div><%= link_to "フォローする", user_relationships_path(user.id), method: :post, class: "btn btn-info" %></div>
            <% end %>
          <% end %>

         <% end %>

      </div>
    </div>


    <div class="side_right col-2 text-center">
      <span id="back">
        <a href="#">
          <i class="fas fa-angle-double-up fa-3x"></i>
        </a>
      </span>
    </div>

  </div>
</div>