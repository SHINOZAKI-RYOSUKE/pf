<div class="container-fluid">
  <div class="row">

    <div class="col-1">
      <div class="side_left">
        <%= link_to new_content_path do %>
        <i class="far fa-plus-square fa-3x"></i>
        <% end %>
      </div>
    </div>




    <div class="col-10">
      <div class="edit_items text-center">

        <h1 class="mb-5">Users</h1>


        <div class="mb-5">
          <%= attachment_image_tag @user, :profile_image, format: 'jpg', fallback: "test_images/0.jpg", class: "user-image2", style: "border-style: none;", id: "preview_image" %>
        </div>

        <%= form_with model: @user, local:true do |f| %>
        
        <div class="mb-2">Content Image</div>
        
        <div class="item_image_btn">
          <%= f.attachment_field :profile_image %>
        </div>
        <div id="img_field card" onclick="$('#file').click()">
          <label class="card py-2" for="user_profile_image">
            画像を選択...
          </label>
        </div>


        <div class="mt-4 mb-2">Name</div>
        <div class="card mb-5 form-group">
            <%= f.text_field :name, placeholder: "名前（1~20）", class: "form-control" %>
        </div>

        <div class="mb-2">Introduction</div>
        <div class="card mb-5 form-group">
            <%= f.text_area :introduction, :size=>"30x5", placeholder: "自己紹介（MAX:300）", class: "form-control" %>
        </div>

        <div class="mb-2">greeting</div>
        <div class="card mb-5 form-group">
            <%= f.text_field :greeting, placeholder: "ひとこと（MAX:20）", class: "form-control" %>
        </div>

        <div class="mb-5 form-group">
          <%= f.submit 'Update User', class: "btn btn-outline-success" %>
        </div>
      　<% end %>


      </div>
    </div>




    <div class="side_right col-1">
      <span id="back">
        <a href="#">
          <i class="fas fa-angle-double-up fa-3x mr-3"></i>
        </a>
      </span>
    </div>

  </div>
</div>






<%# jsに書き込むとなぜかうまくいかないのでここに記述する %>
<script>
  $('#user_profile_image').on('change', function (e) {

      var reader = new FileReader();
      reader.onload = function (e) {
          $("#preview_image").attr('src', e.target.result);
      }
      reader.readAsDataURL(e.target.files[0]);
  });
</script>
