<div id="bg_img">
  <div class="row justify-content-center">
    <div class="col-2 my-5">
      <div class="text-center">



        <div class="row mx-4">
          <div class="col">
            <h4 class="page-title">Sign up</h4>
          </div>
        </div>

        <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>


            <div class="field mt-5">
              <%= f.label "Name" %><br />
              <%= f.text_field :name, autofocus: true, placeholder: "ユーザー名", class: "form-control" %>
            </div>

            <div class="field mt-4">
              <%= f.label "Email" %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com", class: "form-control" %>
            </div>

            <div class="field mt-4">
              <%= f.label "Password" %><br />
              <%= f.password_field :password, autocomplete: "new-password", placeholder: "パスワード", class: "form-control" %>
            </div>

            <div class="field mt-4">
              <%= f.label "Password" %><br />
              <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "(再確認)", class: "form-control" %>
            </div>

            <div class="actions mt-5">
              <%= f.submit "Sign up >>", class: "btn btn-outline-secondary" %>
            </div>


        <% end %>




      </div>
    </div>
  </div>
</div>