<div class="container">
  <div class="row">
    <div class="col-12 my-5">
      <div class="text-center" style="font-size: 100%;">



        <h1>Chats</h1>
        
        <h3 id="room" data-room="<%= @room.id %>" data-user="<%= current_user.id %>"><%= @user.name %> さんとのチャット</h3>
        
        <%= form_with model: @chat do |f| %>
          <div><%= f.text_field :message %></div>
          <div><%= f.hidden_field :room_id %></div>
          <div><%= f.submit %></div>
        <% end %>
        
        <div><%= paginate @chats %></div>
        
        <div class="message">
          <% @chats.each do |chat| %>
            <% if chat.user_id == current_user.id %>
              <p style="text-align: right;"><%= chat.message %></p>
            <% else %>
              <p style="text-align: left;"><%= chat.message %></p>
            <% end %>
          <% end %>
        </div>



      </div>
    </div>
  </div>
</div>