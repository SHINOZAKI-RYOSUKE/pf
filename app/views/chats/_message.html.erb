  <% if chat.user_id == current_user.id %>

    <div class="my_message d-flex flex-row justify-content-end py-2">

      <div>
        <div class="text_message card px-4 py-2 mr-3">
          <%= simple_format(chat.message) %>
        </div>
        <div class="sent_time mr-3">
          <%= chat.created_at %>
        </div>
      </div>

      <div class="d-flex align-content-center">
        <%= attachment_image_tag chat.user, :profile_image, :fill, 200, 200, format: 'jpg', fallback: "test_images/0.jpg", class: "user-image", style: "border-style: none;" %>
      </div>

    </div>

  <% else %>

    <div class="partner_message d-flex flex-row py-2">

      <div class="d-flex align-content-center">
        <%= link_to user_path(chat.user.id) do %>
          <%= attachment_image_tag chat.user, :profile_image, :fill, 200, 200, format: 'jpg', fallback: "test_images/0.jpg", class: "user-image", style: "border-style: none;" %>
        <% end %>
      </div>

      <div>
        <div class="text_message card px-4 py-2 ml-3">
          <%= simple_format(chat.message) %>
        </div>
        <div class="sent_time d-flex justify-content-start mx-3">
          <%= chat.created_at %>
        </div>
      </div>

    </div>

  <% end %>