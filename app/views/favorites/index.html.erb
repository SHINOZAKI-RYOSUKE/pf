<div class="container">
  <div class="row">
    <div class="col-12 my-5">
      <div class="text-center" style="font-size: 100%;">

        <h1>Favorites</h1>
        <% @users.each do |user| %>

          <%= link_to user_path(user.id), class: 'link' do %>
            <div><%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpg', fallback: "0.jpeg", class: "user-image" %></div>
            <div><%= user.name %></div>
          <% end %>

          <div><%= user.greeting %></div>

          <% if current_user != user %>
            <% if user.followed_by?(current_user) %>
              <div><%= link_to "フォロー外す", user_relationships_path(user.id), method: :delete, class: "btn btn-primary" %></div>
            <% else %>
              <div><%= link_to "フォローする", user_relationships_path(user.id), method: :post, class: "btn btn-success" %></div>
            <% end %>
          <% end %>

        <% end %>

      </div>
    </div>
  </div>
</div>